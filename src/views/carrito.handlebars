<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Producto</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody id="productsTable">
    {{#each allProductsMapedArray}}
    <tr class="align-middle">
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td><img src={{this.image}} height="100px"/></td>
      <td>
        <form action="/api/carritos/{{cookieEmail}}/productos/{{this.id}}" method="DELETE">
        <h3>{{cookieEmail}}</h3>
          <button type="submit" class="btn btn-danger">Quitar</button>
        </form>
      </td>
    </tr>
    {{/each}}
    <h3>Tu total es {{totalPrice}}</h3>
  </tbody>
</table>
<form action="/api/carritos/comprar" method="POST">
  <button type="submit" class="btn btn-success {{canBuy}}">COMPRAR</button>
</form>