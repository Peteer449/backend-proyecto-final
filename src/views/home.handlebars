<h2 class="text-center mb-5">Agregar Producto</h2>
<div class="d-flex justify-content-evenly">
  <form action="/api/productos" method="POST" class="d-flex flex-column col-4 flex-wrap">
    Titulo: <input type="text" name="title" id="title"/> 
    Descripcion: <input type="text" name="description" id="description"/> 
    Precio:<input type="number" name="price" id="price"/>
    Foto: <input type="text" name="image" id="image"/>
    Stock:<input type="number" name="stock" id="stock"/>
    Codigo:<input name="code" id="code"/>
    <button>Enviar</button>
  </form>
</div>

